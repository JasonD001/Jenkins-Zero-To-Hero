pipeline {
    agent none
    stages {
        stage('Run Python Script') {
            agent {
                docker {
                    image 'python:3.9-slim'
                    args '-v $WORKSPACE:/workspace'
                }
            }
            steps {
                // Ensure the script is in the right location
                sh 'ls -l /workspace'
                sh 'python /workspace/hello_world.py'
            }
        }
    }
}

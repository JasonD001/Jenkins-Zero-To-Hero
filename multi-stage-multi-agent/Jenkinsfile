pipeline {
    agent none
    stages {
        stage('Run Python Script') {
            agent {
                docker {
                    image 'python:3.9-slim'
                    args '-v $WORKSPACE:/workspace'
                }
            }
            steps {
                // Verify the directory structure inside the container
                sh 'ls -l /workspace/multi-stage-multi-agent'

                // Run the Python script
                sh 'python /workspace/multi-stage-multi-agent/hello_world.py'
            }
        }
    }
}

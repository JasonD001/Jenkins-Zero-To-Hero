pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        // Install Maven dependencies
        sh 'mvn install'
        // Copy or create a Java Hello World file
        sh 'echo "public class HelloWorld { public static void main(String[] args) { System.out.println(\"Hello, World!\"); } }" > HelloWorld.java'
        // Compile and run the Java Hello World application
        sh 'javac HelloWorld.java'
        sh 'java HelloWorld'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        // Install Node.js dependencies
        sh 'npm install'
        // Copy or create a Node.js Hello World file
        sh 'echo "console.log(\'Hello, World!\');" > hello.js'
        // Run the Node.js Hello World application
        sh 'node hello.js'
      }
    }
  }
}

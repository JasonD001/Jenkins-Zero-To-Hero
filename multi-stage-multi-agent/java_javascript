pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        // Fetch the code from the Git repository
        checkout scm
        
        // Install Maven dependencies
        sh 'mvn install'
        
        // Compile and run the Java Hello World program
        sh 'javac multi-stage-multi-agent/HelloWorld.java'
        sh 'java -cp multi-stage-multi-agent HelloWorld'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        // Fetch the code from the Git repository
        checkout scm
        
        // Install Node.js dependencies
        sh 'npm install'
        
        // Run the Node.js Hello World program
        sh 'node multi-stage-multi-agent/hello.js'
      }
    }
  }
}
